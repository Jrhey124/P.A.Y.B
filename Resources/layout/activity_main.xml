<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     android:padding="16dp">
	
    <Button
        android:id="@+id/HotlineButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hotlines"
        android:drawableLeft="@drawable/emergency1" 
		android:drawablePadding="15dp"
        android:textSize="32sp"
        android:layout_marginTop="8dp"/>
	
	<Button
        android:id="@+id/LocatorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/locator"
        android:drawableLeft="@drawable/map" 
		android:drawablePadding="15dp"
        android:textSize="32sp"
        android:layout_marginTop="8dp"/>

	<Button
		android:id="@+id/PricingButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/pricing"
		android:drawableLeft="@drawable/pricing"
		android:drawablePadding="15dp"
		android:textSize="32sp"
		android:layout_marginTop="8dp"/>

	<Button
		android:id="@+id/AboutusButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/aboutus"
		android:drawableLeft="@drawable/aboutus"
		android:drawablePadding="15dp"
		android:textSize="32sp"
		android:layout_marginTop="8dp"/>
</LinearLayout>